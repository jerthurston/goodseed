{
  "family": "goodseed-free-worker",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::396260462264:role/goodseed-free-ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::396260462264:role/goodseed-free-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "goodseed-worker",
      "image": "396260462264.dkr.ecr.us-east-1.amazonaws.com/goodseed-free:dev",
      "essential": true,
      "command": ["pnpm", "worker:scraper"],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://goodseed_user:GoodSeed2024SecureDB@goodseed-free-db.cq7eog2a85qn.us-east-1.rds.amazonaws.com:5432/goodseed_free?sslmode=disable"
        },
        {
          "name": "AUTH_SECRET",
          "value": "goodseed-nextauth-secret-key-production-2024"
        },
        {
          "name": "REDIS_HOST",
          "value": "goodseed-free-redis.lxu2zc.ng.0001.use1.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "WORKER_MODE",
          "value": "true"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/goodseed-free/worker",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "worker"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "ps aux | grep worker || exit 1"
        ],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}